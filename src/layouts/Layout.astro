---
import Head from "@components/Head.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";
import { SITE } from "@consts";
import { ViewTransitions } from "astro:transitions";

type Props = {
  title: string;
  description: string;
  blogEmpty?: boolean;
  hideProjects?: boolean;
  open?: boolean;
  showContact?: boolean;
  color?: string;
};

const {
  title,
  description,
  blogEmpty,
  hideProjects,
  open = false,
  showContact = false,
  color = "primary",
} = Astro.props;
---

<html lang="en" class="min-h-screen">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <Head title={`${title} | ${SITE.NAME}`} description={description} />
    <ViewTransitions />
    <style is:global>
      a:hover,
      a:focus,
      a:focus-within {
        opacity: 0.5;
      }
    </style>
  </head>

  <body
    class="font-bold box-border p-4 pb-0 md:p-10 md:pb-0 min-h-[calc(100vh-2.5rem)] antialiased flex flex-col items-center justify-center bg-primary"
  >
    <body class="shadow-inner">
      <div
        transition:name="bg"
        style="direction: rtl;"
        class="bg-black relative w-full antialiased scrollbar-thumb-rounded-full scrollbar-track-rounded-full scrollbar scrollbar-thumb-primary scrollbar-track-black overflow-auto h-[calc(100vh-2.5rem)] md:h-[calc(100vh-5rem)] rounded-r-[5rem] md:rounded-r-[12vw] prose-p:text-primary text-primary"
      >
        <div style="direction: ltr;">
          <Header {open} {showContact} {title} {color} />
          <main
            class="min-w-full prose-p:text-lg prose-li:pl-0 marker:text-primary md:prose-p:text-2xl prose-headings:text-2xl md:prose-headings:mt-4 md:prose-headings:text-3xl
 prose-p:max-w-6xl font-normal prose text-left prose-green"
          >
            <slot />
          </main>
        </div>
      </div>
      <Footer />
    </body>
  </body>
</html>
