---
import Layout from "@layouts/Layout.astro";
import Container from "@layouts/Container.astro";
import { getEntry, getCollection } from "astro:content";

const diplome = await getCollection("diplome");
const diplom = await getEntry("pages", "diplome");
const { Content, headings } = await diplom.render();
---

<Layout title="Diplome" description="Test">
  <div
    class="flex flex-col items-center justify-center text-yellow prose-headings:text-orange prose-a:text-orange"
  >
    <Container>
      <ul class="p-0 m-0 inline">
        {
          diplome.map((d, i) => (
            <a
              href={"/diplome/" + d.slug}
              class="no-underline hover:opacity-50"
            >
              <li class="font-sans inline text-5xl font-bold list-none">
                {d.data.title}
              </li>
            </a>
          ))
        }
      </ul>
      <br />
      <br />
      <Content />
    </Container>
  </div>
</Layout>
