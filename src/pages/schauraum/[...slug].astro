---
import dk from "../dk.svg";
import Layout from "@layouts/Layout.astro";
import Container from "@layouts/Container.astro";
import { getCollection, getEntry, getEntries } from "astro:content";

export async function getStaticPaths() {
  const schauraeume = await getCollection("schauraum");
  return schauraeume.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}
// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Layout title="Schauraum" description="Test">
  <div
    class="flex flex-col items-center justify-center text-purple prose-headings:text-purple prose-a:text-purple"
  >
    <Container>
      <Content />
    </Container>
    <div
      class="overflow-x-auto w-[calc(100vw-2rem)] md:w-[calc(100vw-5rem)] px-4 md:px-6 gap-8 flex"
    >
      {
        entry.data.slider?.map((slide) => (
          <div class="">
            <img
              src={slide.image.src}
              class="max-h-[80vh] aspect-auto  min-w-[500px]  object-contain   w-auto"
              alt={slide.caption}
            />
            <p class="text-sm">{slide.caption}</p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
