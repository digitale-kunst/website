---
import dk from "../dk.svg";
import Layout from "@layouts/Layout.astro";
import Container from "@layouts/Container.astro";
import { getCollection, getEntry, getEntries } from "astro:content";
import { Image } from "astro:assets";
const diplom = await getEntry("pages", "diplomas");

export async function getStaticPaths() {
  const diplomas = await getCollection("diplomas");
  return diplomas.map((entry) => ({
    params: {
      slug: entry.slug,
      subFolder: entry.data.subFolder ? entry.data.subFolder : undefined,
    },
    props: { entry },
  }));
}

// 2. For your template, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await entry.render();
const { title, description, color } = diplom.data;
---

<Layout {title} {description} {color}>
  <div
    class="flex flex-col items-center justify-center prose-headings:text-cyan prose-a:text-cyan"
  >
    <Container>
      <Content />
    </Container>
    <div
      class="overflow-x-auto w-[calc(100vw-2rem)] md:w-[calc(100vw-5rem)] px-4 md:px-6 gap-8 flex"
    >
      {
        entry.data.slider?.map((slide) => (
          <div class="">
            <Image
              src={slide.image}
              class="max-h-[80vh] aspect-auto  min-w-[500px]  object-contain   w-auto"
              alt={slide.caption}
            />
            <p class="text-sm">{slide.caption}</p>
          </div>
        ))
      }
    </div>
  </div>
</Layout>
